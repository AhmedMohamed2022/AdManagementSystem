@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const changeEmailBtn = document.getElementById('change-email-button');
            const verificationBtn = document.getElementById('email-verification');
            const emailForm = document.getElementById('email-form');
            const newEmailInput = document.querySelector('input[name="Input.NewEmail"]');

            // Change email button handler
            if (changeEmailBtn && emailForm) {
                emailForm.addEventListener('submit', function(e) {
                    // Only apply loading state if the change email button was clicked
                    if (e.submitter === changeEmailBtn) {
                        changeEmailBtn.disabled = true;
                        changeEmailBtn.innerHTML = '<span class="spinner-border spinner-border-sm ms-2"></span> جاري التغيير...';
                    }
                });
            }

            // Verification button handler
            if (verificationBtn) {
                verificationBtn.addEventListener('click', function() {
                    this.disabled = true;
                    this.innerHTML = '<span class="spinner-border spinner-border-sm ms-2"></span> جاري الإرسال...';
                });
            }

            // Email validation enhancement
            if (newEmailInput) {
                newEmailInput.addEventListener('input', function() {
                    this.classList.remove('is-invalid');
                    
                    // Basic email format check
                    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                    if (this.value && !emailRegex.test(this.value)) {
                        this.classList.add('is-invalid');
                    } else if (this.value) {
                        this.classList.add('is-valid');
                    } else {
                        this.classList.remove('is-valid');
                    }
                });
            }
        });
    </script> *@

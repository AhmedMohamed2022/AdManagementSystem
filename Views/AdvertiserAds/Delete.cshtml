@model AdSystem.Models.Ad
@{
    ViewData["Title"] = "Delete Ad";
}

<div class="container mt-5">
    <div class="alert alert-danger">
        <h4 class="alert-heading">⚠️ Confirm Delete</h4>
        <p>Are you sure you want to permanently delete this ad?</p>

        <ul>
            <li><strong>Title:</strong> @Model.Title</li>
            <li><strong>Description:</strong> @Model.Description</li>
            <li><strong>Target:</strong> <a href="@Model.TargetUrl" target="_blank">@Model.TargetUrl</a></li>
        </ul>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">🗑️ Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

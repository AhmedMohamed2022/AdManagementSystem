@model AdSystem.Models.Ad
@{
    ViewData["Title"] = "تعديل الإعلان";
}

<div class="page-header">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
        <div>
            <div class="d-flex align-items-center gap-2 mb-2">
                <a asp-action="Index" class="text-decoration-none" style="color: var(--text-secondary);">
                    <i class="bi bi-arrow-right"></i>
                </a>
                <h4 class="page-title mb-0">تعديل الإعلان</h4>
            </div>
            <p class="page-subtitle mb-0">تحديث معلومات الإعلان</p>
        </div>
        <div class="action-buttons">
            <a asp-action="Index" class="btn btn-light">
                <i class="bi bi-x ms-1"></i> إلغاء
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 col-lg-8">
        <form asp-action="Edit" method="post" enctype="multipart/form-data" id="editForm">
            <input type="hidden" asp-for="Id" />

            <!-- BASIC INFO -->
            <div class="card shadow-sm border-0 mb-4" style="border-radius: var(--radius-lg);">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center gap-3 mb-4 pb-3 border-bottom">
                        <div class="rounded-circle d-flex align-items-center justify-content-center"
                             style="width: 48px; height: 48px; background: var(--primary-lighter); color: var(--primary-main);">
                            <i class="bi bi-info-circle" style="font-size: 20px;"></i>
                        </div>
                        <div>
                            <h5 class="mb-1 fw-semibold">المعلومات الأساسية</h5>
                            <p class="text-muted small mb-0">عنوان ووصف الإعلان</p>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Title" class="form-label fw-semibold mb-2">
                            <i class="bi bi-text-left ms-1"></i> عنوان الإعلان
                        </label>
                        <input asp-for="Title" class="form-control form-control-lg" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label fw-semibold mb-2">
                            <i class="bi bi-card-text ms-1"></i> وصف الإعلان
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="mb-0">
                        <label asp-for="Category" class="form-label fw-semibold mb-2">
                            <i class="bi bi-tag ms-1"></i> التصنيف
                        </label>
                        <input asp-for="Category" class="form-control" />
                        <span asp-validation-for="Category" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <!-- IMAGE UPLOAD -->
            <div class="card shadow-sm border-0 mb-4" style="border-radius: var(--radius-lg);">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center gap-3 mb-4 pb-3 border-bottom">
                        <div class="rounded-circle d-flex align-items-center justify-content-center"
                             style="width: 48px; height: 48px; background: var(--info-lighter); color: var(--info-main);">
                            <i class="bi bi-image" style="font-size: 20px;"></i>
                        </div>
                        <div>
                            <h5 class="mb-1 fw-semibold">صورة الإعلان</h5>
                            <p class="text-muted small mb-0">ارفع صورة جديدة أو احتفظ الحالية</p>
                        </div>
                    </div>

                    <!-- Current Image Preview -->
                    <div class="mb-3 text-center">
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <img src="@Model.ImagePath" class="rounded border" style="max-width: 300px; max-height: 200px; object-fit: contain;" />
                        }
                        else
                        {
                            <div class="text-muted small">لا توجد صورة حالياً</div>
                        }
                    </div>

                    <label class="form-label fw-semibold mb-2">
                        <i class="bi bi-upload ms-1"></i> رفع صورة جديدة
                    </label>
                    <input type="file" name="image" accept="image/png,image/jpeg,image/webp" class="form-control" />
                    <small class="text-muted mt-2 d-block">
                        يُسمح بـ PNG, JPG, WEBP — ويتم تعديل الصورة تلقائياً حسب الحجم المختار
                    </small>
                </div>
            </div>

            <!-- TARGET URL -->
            <div class="card shadow-sm border-0 mb-4" style="border-radius: var(--radius-lg);">
                <div class="card-body p-4">
                    <label asp-for="TargetUrl" class="form-label fw-semibold mb-2">
                        <i class="bi bi-cursor ms-1"></i> رابط الهدف
                    </label>
                    <input asp-for="TargetUrl" class="form-control" placeholder="https://targetsite.com" />
                    <span asp-validation-for="TargetUrl" class="text-danger small"></span>
                </div>
            </div>

            <!-- SETTINGS -->
            <div class="card shadow-sm border-0 mb-4" style="border-radius: var(--radius-lg);">
                <div class="card-body p-4">
                    <label class="form-label fw-semibold mb-2">
                        <i class="bi bi-aspect-ratio ms-1"></i> حجم البانر
                    </label>
                    <select asp-for="BannerSizeId" class="form-control">
                        @foreach (var size in (List<BannerSize>)ViewBag.Sizes)
                        {
                            <option value="@size.Id" selected="@(Model.BannerSizeId == size.Id)">
                                @size.Name (@size.Width x @size.Height)
                            </option>
                        }
                    </select>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <label asp-for="MaxImpressions" class="form-label fw-semibold mb-2">
                                <i class="bi bi-eye ms-1"></i> الحد الأقصى للظهور
                            </label>
                            <input asp-for="MaxImpressions" type="number" class="form-control" placeholder="0 = غير محدود" />
                            <span asp-validation-for="MaxImpressions" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="MaxClicks" class="form-label fw-semibold mb-2">
                                <i class="bi bi-cursor ms-1"></i> الحد الأقصى للنقرات
                            </label>
                            <input asp-for="MaxClicks" type="number" class="form-control" placeholder="0 = غير محدود" />
                            <span asp-validation-for="MaxClicks" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- SAVE BUTTON -->
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 text-end">
                    <a asp-action="Index" class="btn btn-light px-4">
                        إلغاء
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        حفظ التغييرات
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div class="col-12 col-lg-4">
        <!-- Tips Card -->
        <div class="card shadow-sm border-0" style="border-radius: var(--radius-lg); background: var(--warning-lighter);">
            <div class="card-body p-4">
                <h6 class="fw-semibold mb-2" style="color: var(--warning-dark);">نصائح مهمة</h6>
                <ul class="small mb-0" style="color: var(--warning-dark); line-height: 1.8;">
                    <li>استخدم صوراً بجودة جيدة</li>
                    <li>تأكد من صحة الروابط</li>
                    <li>اختر حجم بانر مناسب للموقع المستهدف</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

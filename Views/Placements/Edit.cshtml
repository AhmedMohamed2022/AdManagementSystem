@model AdManagementSystem.Models.AdPlacement
@{
    ViewData["Title"] = "تعديل موقع الإعلان";
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div>
            <h1 class="page-title">تعديل موقع الإعلان</h1>
            <p class="page-subtitle mb-0">قم بتحديث معلومات موقع الإعلان</p>
        </div>
        <div class="action-buttons">
            <a href="/Placements?websiteId=@Model.WebsiteId" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle ms-2"></i>
                إلغاء
            </a>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-lg-8 col-xl-6">
        <!-- Current Info Card -->
        <div class="card mb-4" style="border-radius: var(--radius-lg); box-shadow: var(--shadow-card); background: linear-gradient(135deg, var(--primary-lighter), white);">
            <div class="card-body p-4">
                <div class="d-flex align-items-center gap-3">
                    <div style="width: 56px; height: 56px; background: linear-gradient(135deg, var(--primary-light), var(--primary-main)); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-pin-map text-white" style="font-size: 28px;"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h5 class="mb-1 fw-semibold" style="color: var(--text-primary);">@Model.Name</h5>
                        <div class="d-flex align-items-center gap-2">
                            <code style="color: var(--primary-main); background: white; padding: 4px 8px; border-radius: 6px; font-size: 0.875rem;">@Model.ZoneKey</code>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Edit Form Card -->
        <div class="card" style="border-radius: var(--radius-lg); box-shadow: var(--shadow-card);">
            <div class="card-body p-4">
                <form method="post" id="editPlacementForm">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="WebsiteId" />

                    <!-- Placement Name -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold" style="color: var(--text-primary); margin-bottom: 8px;">
                            <i class="bi bi-tag ms-2"></i>
                            اسم موقع الإعلان
                        </label>
                        <input asp-for="Name"
                               type="text"
                               class="form-control form-control-lg"
                               placeholder="مثال: إعلان الصفحة الرئيسية - أعلى"
                               required
                               style="border-radius: var(--radius-sm); border: 1px solid var(--gray-300); padding: 12px 16px;" />
                        <small class="form-text text-muted mt-2 d-block">
                            <i class="bi bi-info-circle ms-1"></i>
                            اختر اسماً واضحاً يصف موقع الإعلان في صفحتك
                        </small>
                    </div>

                    <!-- Banner Size Selection -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold" style="color: var(--text-primary); margin-bottom: 12px;">
                            <i class="bi bi-aspect-ratio ms-2"></i>
                            حجم الإعلان
                        </label>

                        <div class="row g-3">
                            @foreach (var size in (List<BannerSize>)ViewBag.Sizes)
                            {
                                <div class="col-6 col-md-4">
                                    <input type="radio"
                                           class="btn-check"
                                           name="BannerSizeId"
                                           id="size_@size.Id"
                                           value="@size.Id"
                                           @(Model.BannerSizeId == size.Id ? "checked" : "")
                                           required />
                                    <label class="btn btn-outline-primary w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3"
                                           for="size_@size.Id"
                                           style="border-radius: var(--radius-md); min-height: 100px; transition: all 0.2s ease;">
                                        <i class="bi bi-badge-ad mb-2" style="font-size: 24px;"></i>
                                        <span class="fw-semibold d-block mb-1">@size.Name</span>
                                        <small class="text-muted">@size.Width × @size.Height</small>
                                    </label>
                                </div>
                            }
                        </div>
                        <small class="form-text text-muted mt-2 d-block">
                            <i class="bi bi-info-circle ms-1"></i>
                            اختر المقاس المناسب لموقع الإعلان في صفحتك
                        </small>
                    </div>

                    <!-- Warning Box -->
                    <div class="alert alert-warning d-flex align-items-start mb-4" style="background-color: var(--warning-lighter); border: none; border-radius: var(--radius-md); border-right: 4px solid var(--warning-main);">
                        <i class="bi bi-exclamation-triangle flex-shrink-0 ms-3" style="font-size: 24px; color: var(--warning-main);"></i>
                        <div>
                            <h6 class="mb-1 fw-semibold" style="color: var(--warning-dark);">تنبيه</h6>
                            <p class="mb-0" style="color: var(--warning-dark); font-size: 0.875rem;">
                                تغيير حجم الإعلان قد يؤثر على مظهره في موقعك. تأكد من تحديث الكود في صفحتك إذا لزم الأمر.
                            </p>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex gap-3 justify-content-end mt-4 pt-3" style="border-top: 1px solid var(--gray-200);">
                        <a href="/Placements?websiteId=@Model.WebsiteId" class="btn btn-outline-secondary px-4" style="border-radius: var(--radius-sm);">
                            <i class="bi bi-x-circle ms-2"></i>
                            إلغاء
                        </a>
                        <button type="submit" class="btn btn-primary px-4" style="border-radius: var(--radius-sm);">
                            <i class="bi bi-check-circle ms-2"></i>
                            حفظ التغييرات
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Zone Key Info Card -->
        <div class="card mt-4" style="border-radius: var(--radius-lg); box-shadow: var(--shadow-card);">
            <div class="card-body p-4">
                <div class="d-flex align-items-start gap-3">
                    <div style="width: 48px; height: 48px; background-color: var(--info-lighter); border-radius: 10px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-key" style="font-size: 24px; color: var(--info-main);"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="mb-2 fw-semibold" style="color: var(--text-primary);">معلومات مهمة</h6>
                        <p class="mb-3" style="color: var(--text-secondary); font-size: 0.875rem; line-height: 1.6;">
                            مفتاح المنطقة (Zone Key) لا يمكن تغييره. إذا كنت بحاجة لمفتاح جديد، يجب إنشاء موقع إعلان جديد.
                        </p>
                        <div class="d-flex align-items-center gap-2 p-3" style="background-color: var(--gray-100); border-radius: var(--radius-sm);">
                            <code style="color: var(--primary-main); background: transparent; font-size: 0.875rem;">@Model.ZoneKey</code>
                            <button class="btn btn-sm btn-icon me-auto" onclick="copyZoneKey(this)" style="background-color: white; border: 1px solid var(--gray-300);">
                                <i class="bi bi-clipboard"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="d-flex gap-3 mt-4">
            <a href="/Placements/Script/@Model.Id" class="btn btn-outline-primary flex-grow-1" style="border-radius: var(--radius-md); padding: 12px;">
                <i class="bi bi-code-slash ms-2"></i>
                عرض الكود
            </a>
            <a href="/Placements/Delete/@Model.Id"
               class="btn btn-outline-danger"
               style="border-radius: var(--radius-md); padding: 12px;"
               onclick="return confirm('هل أنت متأكد من حذف هذا الموقع؟ لا يمكن التراجع عن هذا الإجراء.');">
                <i class="bi bi-trash ms-2"></i>
                حذف الموقع
            </a>
        </div>
    </div>
</div>

<style>
    .btn-check:checked + .btn-outline-primary {
        background-color: var(--primary-main) !important;
        border-color: var(--primary-main) !important;
        color: white !important;
        box-shadow: 0 4px 8px rgba(32, 101, 209, 0.3);
    }

    .btn-check + .btn-outline-primary:hover {
        background-color: var(--primary-lighter);
        border-color: var(--primary-main);
        color: var(--primary-main);
        transform: translateY(-2px);
    }

    .form-control:focus {
        border-color: var(--primary-main);
        box-shadow: 0 0 0 3px rgba(32, 101, 209, 0.1);
    }

    .btn-icon {
        width: 36px;
        height: 36px;
        padding: 0;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: var(--radius-sm);
    }

        .btn-icon:hover {
            transform: scale(1.05);
        }
</style>

<script>
    function copyZoneKey(button) {
        const zoneKey = '@Model.ZoneKey';
        navigator.clipboard.writeText(zoneKey).then(function() {
            const icon = button.querySelector('i');
            const originalClass = icon.className;
            icon.className = 'bi bi-check2';
            button.style.backgroundColor = 'var(--success-lighter)';
            button.style.color = 'var(--success-main)';

            setTimeout(function() {
                icon.className = originalClass;
                button.style.backgroundColor = 'white';
                button.style.color = '';
            }, 2000);
        });
    }


@model IEnumerable<dynamic>

<h2>Ad Performance Dashboard</h2>

<table style="width:100%; border-collapse: collapse;">
    <thead style="background:#f4f4f4;">
        <tr>
            <th style="border:1px solid #ccc; padding:8px;">Title</th>
            <th style="border:1px solid #ccc; padding:8px;">Target URL</th>
            <th style="border:1px solid #ccc; padding:8px;">Impressions</th>
            <th style="border:1px solid #ccc; padding:8px;">Clicks</th>
            <th style="border:1px solid #ccc; padding:8px;">CTR (%)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ad in Model)
        {
            <tr>
                <td style="border:1px solid #ccc; padding:8px;">@ad.Title</td>
                <td style="border:1px solid #ccc; padding:8px;">@ad.TargetUrl</td>
                <td style="border:1px solid #ccc; padding:8px;">@ad.Impressions</td>
                <td style="border:1px solid #ccc; padding:8px;">@ad.Clicks</td>
                <td style="border:1px solid #ccc; padding:8px;">@ad.CTR</td>
            </tr>
        }
    </tbody>
</table>

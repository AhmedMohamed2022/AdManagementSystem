@model AdSystem.Models.Website

@{
    ViewData["Title"] = "Website Details";
}

<h2>Website Details</h2>

<hr />
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Domain</dt>
    <dd class="col-sm-10"><a href="@Model.Domain" target="_blank">@Model.Domain</a></dd>

    <dt class="col-sm-2">Script Key</dt>
    <dd class="col-sm-10"><code>@Model.ScriptKey</code></dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">
        @if (Model.IsApproved)
        {
            <span class="badge bg-success">Approved</span>
        }
        else
        {
            <span class="badge bg-warning text-dark">Pending Approval</span>
        }
    </dd>
</dl>


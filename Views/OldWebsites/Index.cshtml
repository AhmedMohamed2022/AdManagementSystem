@model IEnumerable<AdSystem.Models.Website>
@{
    ViewData["Title"] = "My Websites";
}

<h2>Your Websites</h2>
<a class="btn btn-primary mb-3" asp-action="index">Add New Website</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Domain</th>
            <th>Script Key</th>
            <th>Approved</th>
            <th>Snippet</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var site in Model)
        {
            <tr>
                <td>@site.Name</td>
                <td>@site.Domain</td>
                <td><code>@site.ScriptKey</code></td>
                <td>@(site.IsApproved ? "✅ Approved" : "⏳ Pending")</td>
                <td>
                    @if (site.IsApproved)
                    {
                        <a asp-action="ScriptSnippet" asp-route-id="@site.Id" class="btn btn-sm btn-outline-secondary">View Snippet</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

                    @if (User.IsInRole("Publisher") || User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@site.Id" class="btn btn-sm btn-warning">Edit</a>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="ToggleApproval" asp-route-id="@site.Id" class="btn btn-sm btn-dark">

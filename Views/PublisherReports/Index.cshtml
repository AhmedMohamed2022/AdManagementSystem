@using AdManagementSystem.ViewModels
@model PublisherReportViewModel
@{
    var filter = (ReportFilterViewModel)ViewBag.Filter;
    ViewData["Title"] = "تقارير الناشر";
}

<!-- Page Header -->
<div class="page-header mb-4">
    @* <div class="d-flex align-items-center justify-content-between flex-wrap gap-3"> *@
        <div>
            <h1 class="page-title">تقارير الأرباح</h1>
            <p class="page-subtitle">تتبع أداء مواقعك وأرباحك من الإعلانات</p>
        </div>
        <div class="d-flex gap-2">
            <a href="@Url.Action("ExportCsv", "PublisherReports", new {
                StartDate = filter?.StartDate?.ToString("yyyy-MM-dd"),
                EndDate = filter?.EndDate?.ToString("yyyy-MM-dd"),
                Country = filter?.Country,
                City = filter?.City,
                AdId = filter?.AdId
            })" class="btn btn-outline-success">
                <i class="bi bi-file-earmark-spreadsheet me-2"></i>
                تصدير CSV
            </a>
            <a href="@Url.Action("ExportPdf", "PublisherReports", new {
                StartDate = filter?.StartDate?.ToString("yyyy-MM-dd"),
                EndDate = filter?.EndDate?.ToString("yyyy-MM-dd"),
                Country = filter?.Country,
                City = filter?.City,
                AdId = filter?.AdId
            })" class="btn btn-outline-danger">
                <i class="bi bi-file-earmark-pdf me-2"></i>
                تصدير PDF
            </a>
        </div>
    @* </div> *@
</div>

<!-- Filters Card -->
<div class="card shadow-card mb-4">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h6 class="fw-semibold mb-0" style="color: var(--text-primary);">
                <i class="bi bi-funnel me-2"></i>
                تصفية التقارير
            </h6>
            <button type="button" class="btn btn-sm btn-outline-secondary" id="resetFilters">
                <i class="bi bi-arrow-clockwise me-1"></i>
                إعادة تعيين
            </button>
        </div>
        
        <form method="get" id="filterForm">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label fw-semibold small" style="color: var(--text-secondary);">
                        <i class="bi bi-calendar-event me-1"></i>
                        من تاريخ
                    </label>
                    <input type="date" 
                           class="form-control" 
                           name="StartDate" 
                           value="@filter?.StartDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold small" style="color: var(--text-secondary);">
                        <i class="bi bi-calendar-check me-1"></i>
                        إلى تاريخ
                    </label>
                    <input type="date" 
                           class="form-control" 
                           name="EndDate" 
                           value="@filter?.EndDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-semibold small" style="color: var(--text-secondary);">
                        <i class="bi bi-flag me-1"></i>
                        الدولة
                    </label>
                    <input type="text" 
                           class="form-control" 
                           name="Country" 
                           value="@filter?.Country"
                           placeholder="مثال: Egypt" />
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-semibold small" style="color: var(--text-secondary);">
                        <i class="bi bi-building me-1"></i>
                        المدينة
                    </label>
                    <input type="text" 
                           class="form-control" 
                           name="City" 
                           value="@filter?.City"
                           placeholder="مثال: Cairo" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search me-2"></i>
                        تصفية
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3 col-sm-6">
        <div class="stat-card stat-card-hover">
            <div class="stat-card-icon" style="background: var(--primary-lighter); color: var(--primary-main);">
                <i class="bi bi-eye-fill"></i>
            </div>
            <div class="stat-card-content">
                <h3 class="stat-card-value" id="impressionsCount">@Model.TotalImpressions.ToString("N0")</h3>
                <p class="stat-card-label">إجمالي الظهور</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="stat-card stat-card-hover">
            <div class="stat-card-icon" style="background: var(--success-lighter); color: var(--success-main);">
                <i class="bi bi-cursor-fill"></i>
            </div>
            <div class="stat-card-content">
                <h3 class="stat-card-value" id="clicksCount">@Model.TotalClicks.ToString("N0")</h3>
                <p class="stat-card-label">إجمالي النقرات</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="stat-card stat-card-hover">
            <div class="stat-card-icon" style="background: var(--warning-lighter); color: var(--warning-main);">
                <i class="bi bi-graph-up-arrow"></i>
            </div>
            <div class="stat-card-content">
                <h3 class="stat-card-value">@Model.CTR.ToString("N2")%</h3>
                <p class="stat-card-label">معدل النقر (CTR)</p>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6">
        <div class="stat-card stat-card-hover">
            <div class="stat-card-icon" style="background: var(--success-lighter); color: var(--success-main);">
                <i class="bi bi-cash-stack"></i>
            </div>
            <div class="stat-card-content">
                <h3 class="stat-card-value" style="color: var(--success-main);">$@Model.TotalEarnings.ToString("N2")</h3>
                <p class="stat-card-label">إجمالي الأرباح</p>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row g-4 mb-4">
    <!-- Earnings by Website Chart -->
    <div class="col-lg-8">
        <div class="card shadow-card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h6 class="fw-semibold mb-0" style="color: var(--text-primary);">
                        <i class="bi bi-bar-chart-fill me-2"></i>
                        الأرباح حسب الموقع
                    </h6>
                    <div class="chart-legend">
                        <span class="legend-item">
                            <span class="legend-color" style="background: var(--primary-main);"></span>
                            الأرباح ($)
                        </span>
                    </div>
                </div>
                <div class="chart-container" style="height: 300px;">
                    <canvas id="websitesChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Regional Distribution Chart -->
    <div class="col-lg-4">
        <div class="card shadow-card">
            <div class="card-body">
                <h6 class="fw-semibold mb-3" style="color: var(--text-primary);">
                    <i class="bi bi-pie-chart-fill me-2"></i>
                    التوزيع الجغرافي
                </h6>
                <div class="chart-container" style="height: 300px;">
                    <canvas id="regionChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Performance Trend Chart -->
<div class="card shadow-card mb-4">
    <div class="card-body">
        <h6 class="fw-semibold mb-3" style="color: var(--text-primary);">
            <i class="bi bi-graph-up me-2"></i>
            أداء النقرات والظهور
        </h6>
        <div class="chart-container" style="height: 250px;">
            <canvas id="performanceChart"></canvas>
        </div>
    </div>
</div>

<!-- Website Performance Table -->
<div class="card shadow-card">
    <div class="card-body p-0">
        <div class="d-flex align-items-center justify-content-between p-4 border-bottom">
            <div>
                <h5 class="mb-1 fw-semibold" style="color: var(--text-primary);">أداء المواقع</h5>
                <p class="text-muted mb-0 small">تفاصيل الأداء لكل موقع</p>
            </div>
        </div>

        @if (Model.Websites != null && Model.Websites.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead style="background-color: var(--gray-100);">
                        <tr>
                            <th class="px-4 py-3 text-muted fw-semibold small">اسم الموقع</th>
                            <th class="px-4 py-3 text-muted fw-semibold small text-center">الظهور</th>
                            <th class="px-4 py-3 text-muted fw-semibold small text-center">النقرات</th>
                            <th class="px-4 py-3 text-muted fw-semibold small text-center">CTR</th>
                            <th class="px-4 py-3 text-muted fw-semibold small text-end">الأرباح</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var site in Model.Websites.OrderByDescending(w => w.Earnings))
                        {
                            <tr>
                                <td class="px-4 py-3">
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="website-icon">
                                            <i class="bi bi-globe"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold" style="color: var(--text-primary);">
                                                @site.Name
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-4 py-3 text-center">
                                    <span class="metric-badge metric-impressions">
                                        <i class="bi bi-eye"></i>
                                        @site.Impressions.ToString("N0")
                                    </span>
                                </td>
                                <td class="px-4 py-3 text-center">
                                    <span class="metric-badge metric-clicks">
                                        <i class="bi bi-cursor"></i>
                                        @site.Clicks.ToString("N0")
                                    </span>
                                </td>
                                <td class="px-4 py-3 text-center">
                                    <div class="progress-container">
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar bg-warning" 
                                                 role="progressbar" 
                                                 style="width: @(site.CTR > 100 ? 100 : site.CTR)%"
                                                 aria-valuenow="@site.CTR" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100"></div>
                                        </div>
                                        <small class="text-muted mt-1 d-block">@site.CTR.ToString("N2")%</small>
                                    </div>
                                </td>
                                <td class="px-4 py-3 text-end">
                                    <span class="earnings-badge">
                                        <i class="bi bi-currency-dollar"></i>
                                        @site.Earnings.ToString("N2")
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state py-5">
                <div class="empty-state-icon">
                    <i class="bi bi-bar-chart"></i>
                </div>
                <h5 class="empty-state-title">لا توجد بيانات</h5>
                <p class="empty-state-message">لا توجد بيانات متاحة للفترة المحددة</p>
            </div>
        }
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Chart.js default configuration
        Chart.defaults.font.family = "'Cairo', sans-serif";
        Chart.defaults.color = '#637381';
        
        // Color palette
        const colors = {
            primary: '#2065D1',
            primaryLight: 'rgba(32, 101, 209, 0.1)',
            success: '#00AB55',
            successLight: 'rgba(0, 171, 85, 0.1)',
            warning: '#FFAB00',
            warningLight: 'rgba(255, 171, 0, 0.1)',
            error: '#FF5630',
            info: '#00B8D9',
            gray: '#919EAB'
        };

        // 1. Earnings by Website - Horizontal Bar Chart
        const websiteLabels = @Html.Raw(Json.Serialize(Model.Websites?.Select(w => w.Name) ?? new List<string>()));
        const websiteEarnings = @Html.Raw(Json.Serialize(Model.Websites?.Select(w => w.Earnings) ?? new List<decimal>()));
        
        new Chart(document.getElementById('websitesChart'), {
            type: 'bar',
            data: {
                labels: websiteLabels,
                datasets: [{
                    label: 'الأرباح ($)',
                    data: websiteEarnings,
                    backgroundColor: colors.primary,
                    borderRadius: 8,
                    borderSkipped: false,
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        padding: 12,
                        borderRadius: 8,
                        titleFont: { size: 14, weight: 'bold' },
                        bodyFont: { size: 13 },
                        callbacks: {
                            label: function(context) {
                                return 'الأرباح: $' + context.parsed.x.toFixed(2);
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(145, 158, 171, 0.08)'
                        },
                        ticks: {
                            callback: function(value) {
                                return '$' + value;
                            }
                        }
                    },
                    y: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        // 2. Regional Distribution - Doughnut Chart
        const regionLabels = @Html.Raw(Json.Serialize(Model.Regions?.Select(r => r.Country ?? "غير محدد") ?? new List<string>()));
        const regionImpressions = @Html.Raw(Json.Serialize(Model.Regions?.Select(r => r.Impressions).ToArray() ?? Array.Empty<long>()));
        
        const regionColors = [
            colors.primary,
            colors.success,
            colors.warning,
            colors.error,
            colors.info,
            '#7635dc',
            '#ff9800',
            '#e91e63'
        ];

        new Chart(document.getElementById('regionChart'), {
            type: 'doughnut',
            data: {
                labels: regionLabels,
                datasets: [{
                    data: regionImpressions,
                    backgroundColor: regionColors,
                    borderWidth: 0,
                    hoverOffset: 10
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 15,
                            usePointStyle: true,
                            pointStyle: 'circle',
                            font: {
                                size: 12
                            }
                        }
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        padding: 12,
                        borderRadius: 8,
                        callbacks: {
                            label: function(context) {
                                const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                const percentage = ((context.parsed / total) * 100).toFixed(1);
                                return context.label + ': ' + context.parsed.toLocaleString() + ' (' + percentage + '%)';
                            }
                        }
                    }
                },
                cutout: '65%'
            }
        });

        // 3. Performance Trend - Line Chart
        const performanceLabels = websiteLabels;
        const impressionsData = @Html.Raw(Json.Serialize(Model.Websites?.Select(w => w.Impressions) ?? new List<long>()));
        const clicksData = @Html.Raw(Json.Serialize(Model.Regions?.Select(r => r.Clicks).ToArray() ?? Array.Empty<long>()));

        new Chart(document.getElementById('performanceChart'), {
            type: 'line',
            data: {
                labels: performanceLabels,
                datasets: [
                    {
                        label: 'الظهور',
                        data: impressionsData,
                        borderColor: colors.primary,
                        backgroundColor: colors.primaryLight,
                        tension: 0.4,
                        fill: true,
                        pointRadius: 4,
                        pointHoverRadius: 6,
                        pointBackgroundColor: colors.primary,
                        borderWidth: 2
                    },
                    {
                        label: 'النقرات',
                        data: clicksData,
                        borderColor: colors.success,
                        backgroundColor: colors.successLight,
                        tension: 0.4,
                        fill: true,
                        pointRadius: 4,
                        pointHoverRadius: 6,
                        pointBackgroundColor: colors.success,
                        borderWidth: 2
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                interaction: {
                    mode: 'index',
                    intersect: false,
                },
                plugins: {
                    legend: {
                        position: 'top',
                        align: 'end',
                        labels: {
                            usePointStyle: true,
                            pointStyle: 'circle',
                            padding: 15,
                            font: { size: 12 }
                        }
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        padding: 12,
                        borderRadius: 8,
                        titleFont: { size: 14, weight: 'bold' },
                        bodyFont: { size: 13 }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(145, 158, 171, 0.08)'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        // Reset filters functionality
        document.getElementById('resetFilters').addEventListener('click', function() {
            document.getElementById('filterForm').reset();
            window.location.href = '@Url.Action("Index", "PublisherReports")';
        });
    </script>
}
@{
    ViewData["Title"] = "الصفحة الرئيسية";
}

<!-- Hero Section -->
<div class="position-relative overflow-hidden mb-5" style="margin-top: -2rem;">
    <div class="position-relative" style="background: linear-gradient(135deg, var(--primary-main) 0%, var(--primary-dark) 100%); padding: 80px 0; border-radius: 0 0 24px 24px;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-lg-6 text-white mb-5 mb-lg-0">
                    <div class="badge rounded-pill mb-3" style="background: rgba(255,255,255,0.2); color: white; padding: 8px 20px; font-weight: 600;">
                        <i class="bi bi-star-fill ms-1"></i>
                        منصة إدارة الإعلانات الذكية
                    </div>
                    <h1 class="display-4 fw-bold mb-4" style="line-height: 1.2;">
                        أطلق حملاتك الإعلانية
                        <br />
                        <span style="color: rgba(255,255,255,0.9);">بكل سهولة واحترافية</span>
                    </h1>
                    <p class="lead mb-4" style="color: rgba(255,255,255,0.9); font-size: 1.1rem;">
                        منصة متكاملة تربط المعلنين بالناشرين، مع أدوات تحليل قوية ولوحة تحكم سهلة الاستخدام
                    </p>
                    <div class="d-flex gap-3 flex-wrap">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Advertiser"))
                            {
                                <a asp-controller="AdvertiserAds" asp-action="Index" class="btn btn-light btn-lg px-4">
                                    <i class="bi bi-megaphone ms-2"></i>
                                    إعلاناتي
                                </a>
                            }
                            else if (User.IsInRole("Publisher"))
                            {
                                <a asp-controller="Websites" asp-action="Index" class="btn btn-light btn-lg px-4">
                                    <i class="bi bi-globe2 ms-2"></i>
                                    مواقعي
                                </a>
                            }
                            else if (User.IsInRole("Admin"))
                            {
                                <a asp-controller="AdminDashboard" asp-action="Index" class="btn btn-light btn-lg px-4">
                                    <i class="bi bi-speedometer2 ms-2"></i>
                                    لوحة التحكم
                                </a>
                            }
                        }
                        else
                        {
                            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light btn-lg px-4">
                                <i class="bi bi-rocket-takeoff ms-2"></i>
                                ابدأ مجاناً
                            </a>
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-light btn-lg px-4">
                                <i class="bi bi-box-arrow-in-left ms-2"></i>
                                تسجيل الدخول
                            </a>
                        }
                    </div>
                </div>
                <div class="col-12 col-lg-6">
                    <div class="position-relative">
                        <div class="rounded-4 overflow-hidden shadow-lg" style="background: white; padding: 2rem;">
                            <div class="d-flex justify-content-center align-items-center" style="height: 400px; background: linear-gradient(135deg, var(--primary-lighter) 0%, var(--info-lighter) 100%); border-radius: 16px;">
                                <div class="text-center">
                                    <i class="bi bi-graph-up-arrow" style="font-size: 120px; color: var(--primary-main); opacity: 0.3;"></i>
                                </div>
                            </div>
                        </div>
                        <!-- Floating Stats -->
                        <div class="position-absolute" style="top: 20px; right: -20px;">
                            <div class="card border-0 shadow-lg" style="border-radius: 12px; background: white;">
                                <div class="card-body p-3">
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; background: var(--success-lighter);">
                                            <i class="bi bi-check-circle-fill" style="color: var(--success-main);"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold" style="color: var(--success-main);">+2500</div>
                                            <small class="text-muted">إعلان نشط</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container mb-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold mb-3" style="color: var(--text-primary);">لماذا تختار منصتنا؟</h2>
        <p class="text-muted" style="max-width: 600px; margin: 0 auto;">
            نوفر لك جميع الأدوات التي تحتاجها لإدارة حملاتك الإعلانية بكفاءة عالية
        </p>
    </div>

    <div class="row g-4">
        <!-- Feature 1 -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card border-0 shadow-sm h-100" style="border-radius: var(--radius-lg); transition: transform 0.2s ease;">
                <div class="card-body p-4">
                    <div class="rounded-circle d-flex align-items-center justify-content-center mb-3"
                         style="width: 64px; height: 64px; background: var(--primary-lighter);">
                        <i class="bi bi-lightning-charge-fill" style="font-size: 28px; color: var(--primary-main);"></i>
                    </div>
                    <h5 class="fw-semibold mb-3">سهولة في الاستخدام</h5>
                    <p class="text-muted mb-0">
                        واجهة مستخدم بسيطة وسهلة تتيح لك إدارة إعلاناتك في دقائق معدودة دون الحاجة لخبرة تقنية
                    </p>
                </div>
            </div>
        </div>

        <!-- Feature 2 -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card border-0 shadow-sm h-100" style="border-radius: var(--radius-lg); transition: transform 0.2s ease;">
                <div class="card-body p-4">
                    <div class="rounded-circle d-flex align-items-center justify-content-center mb-3"
                         style="width: 64px; height: 64px; background: var(--success-lighter);">
                        <i class="bi bi-graph-up" style="font-size: 28px; color: var(--success-main);"></i>
                    </div>
                    <h5 class="fw-semibold mb-3">تحليلات متقدمة</h5>
                    <p class="text-muted mb-0">
                        احصل على تقارير مفصلة عن أداء إعلاناتك مع إحصائيات دقيقة حول المشاهدات والنقرات
                    </p>
                </div>
            </div>
        </div>

        <!-- Feature 3 -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card border-0 shadow-sm h-100" style="border-radius: var(--radius-lg); transition: transform 0.2s ease;">
                <div class="card-body p-4">
                    <div class="rounded-circle d-flex align-items-center justify-content-center mb-3"
                         style="width: 64px; height: 64px; background: var(--info-lighter);">
                        <i class="bi bi-shield-check" style="font-size: 28px; color: var(--info-main);"></i>
                    </div>
                    <h5 class="fw-semibold mb-3">أمان وموثوقية</h5>
                    <p class="text-muted mb-0">
                        نظام مراجعة احترافي يضمن جودة الإعلانات والمواقع مع حماية كاملة لبيانات المستخدمين
                    </p>
                </div>
            </div>
        </div>

        <!-- Feature 4 -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card border-0 shadow-sm h-100" style="border-radius: var(--radius-lg); transition: transform 0.2s ease;">
                <div class="card-body p-4">
                    <div class="rounded-circle d-flex align-items-center justify-content-center mb-3"
                         style="width: 64px; height: 64px; background: var(--warning-lighter);">
                        <i class="bi bi-gear-wide-connected" style="font-size: 28px; color: var(--warning-main);"></i>
                    </div>
                    <h5 class="fw-semibold mb-3">تكامل سلس</h5>
                    <p class="text-muted mb-0">
                        دمج سهل وسريع مع مواقعك من خلال كود بسيط، ابدأ عرض الإعلانات في ثوانٍ
                    </p>
                </div>
            </div>
        </div>

        <!-- Feature 5 -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card border-0 shadow-sm h-100" style="border-radius: var(--radius-lg); transition: transform 0.2s ease;">
                <div class="card-body p-4">
                    <div class="rounded-circle d-flex align-items-center justify-content-center mb-3"
                         style="width: 64px; height: 64px; background: var(--error-lighter);">
                        <i class="bi bi-clock-history" style="font-size: 28px; color: var(--error-main);"></i>
                    </div>
                    <h5 class="fw-semibold mb-3">جدولة ذكية</h5>
                    <p class="text-muted mb-0">
                        تحكم كامل في مدة عرض إعلاناتك مع إمكانية تحديد عدد المشاهدات والنقرات المستهدفة
                    </p>
                </div>
            </div>
        </div>

        <!-- Feature 6 -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card border-0 shadow-sm h-100" style="border-radius: var(--radius-lg); transition: transform 0.2s ease;">
                <div class="card-body p-4">
                    <div class="rounded-circle d-flex align-items-center justify-content-center mb-3"
                         style="width: 64px; height: 64px; background: linear-gradient(135deg, var(--primary-main) 0%, var(--info-main) 100%);">
                        <i class="bi bi-headset" style="font-size: 28px; color: white;"></i>
                    </div>
                    <h5 class="fw-semibold mb-3">دعم فني متميز</h5>
                    <p class="text-muted mb-0">
                        فريق دعم متواجد دائماً لمساعدتك وحل أي مشكلة قد تواجهها في استخدام المنصة
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- How It Works Section -->
<div class="container mb-5">
    <div class="card border-0 shadow-sm" style="border-radius: var(--radius-lg); background: linear-gradient(135deg, var(--gray-50) 0%, white 100%);">
        <div class="card-body p-5">
            <div class="text-center mb-5">
                <h2 class="fw-bold mb-3" style="color: var(--text-primary);">كيف تعمل المنصة؟</h2>
                <p class="text-muted">ثلاث خطوات بسيطة للبدء</p>
            </div>

            <div class="row g-4">
                <div class="col-12 col-md-4">
                    <div class="text-center">
                        <div class="d-inline-flex rounded-circle align-items-center justify-content-center mb-3"
                             style="width: 80px; height: 80px; background: var(--primary-main); color: white; font-size: 32px; font-weight: bold;">
                            1
                        </div>
                        <h5 class="fw-semibold mb-3">أنشئ حسابك</h5>
                        <p class="text-muted">
                            سجّل كمعلن أو ناشر في دقائق معدودة، واختر الخطة المناسبة لاحتياجاتك
                        </p>
                    </div>
                </div>

                <div class="col-12 col-md-4">
                    <div class="text-center">
                        <div class="d-inline-flex rounded-circle align-items-center justify-content-center mb-3"
                             style="width: 80px; height: 80px; background: var(--success-main); color: white; font-size: 32px; font-weight: bold;">
                            2
                        </div>
                        <h5 class="fw-semibold mb-3">أضف محتواك</h5>
                        <p class="text-muted">
                            أنشئ إعلاناتك أو أضف مواقعك بكل سهولة من خلال لوحة التحكم البسيطة
                        </p>
                    </div>
                </div>

                <div class="col-12 col-md-4">
                    <div class="text-center">
                        <div class="d-inline-flex rounded-circle align-items-center justify-content-center mb-3"
                             style="width: 80px; height: 80px; background: var(--info-main); color: white; font-size: 32px; font-weight: bold;">
                            3
                        </div>
                        <h5 class="fw-semibold mb-3">راقب الأداء</h5>
                        <p class="text-muted">
                            تابع نتائج حملاتك في الوقت الفعلي وحسّن استراتيجيتك الإعلانية
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
@if (!User.Identity.IsAuthenticated)
{
    <div class="container mb-5">
        <div class="card border-0 shadow-lg" style="border-radius: var(--radius-lg); background: linear-gradient(135deg, var(--primary-main) 0%, var(--primary-dark) 100%);">
            <div class="card-body p-5 text-center text-white">
                <h2 class="fw-bold mb-3">جاهز للبدء؟</h2>
                <p class="mb-4" style="font-size: 1.1rem; opacity: 0.9;">
                    انضم إلى آلاف المعلنين والناشرين الذين يثقون بمنصتنا
                </p>
                <div class="d-flex gap-3 justify-content-center flex-wrap">
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light btn-lg px-5">
                        <i class="bi bi-rocket-takeoff ms-2"></i>
                        ابدأ الآن مجاناً
                    </a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add hover effects to feature cards
            const featureCards = document.querySelectorAll('.card');

            featureCards.forEach(card => {
                card.style.transition = 'transform 0.3s ease, box-shadow 0.3s ease';

                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-8px)';
                    this.style.boxShadow = 'var(--shadow-dialog)';
                });

                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                    this.style.boxShadow = '';
                });
            });

            // Add smooth transitions to buttons
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach(button => {
                button.style.transition = 'all 0.2s ease';

                button.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                });

                button.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
}
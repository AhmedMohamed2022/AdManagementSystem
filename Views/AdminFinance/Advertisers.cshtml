@model IEnumerable<AdSystem.Models.ApplicationUser>
@{
    ViewData["Title"] = "إدارة المعلنين";
}
<link rel="stylesheet" href="~/css/AdminFinanceAdvertiser.css" />

<!-- Page Header -->
<div class="page-header">
    <div>
        <h1 class="page-title">إدارة أرصدة المعلنين</h1>
        <p class="page-subtitle">عرض وإدارة الأرصدة المالية لجميع المعلنين في النظام</p>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="stat-card">
            <div class="stat-card-icon" style="background: var(--primary-lighter); color: var(--primary-main);">
                <i class="bi bi-people-fill"></i>
            </div>
            <div class="stat-card-content">
                <h3 class="stat-card-value">@Model.Count()</h3>
                <p class="stat-card-label">إجمالي المعلنين</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card">
            <div class="stat-card-icon" style="background: var(--success-lighter); color: var(--success-main);">
                <i class="bi bi-wallet2"></i>
            </div>
            <div class="stat-card-content">
                <h3 class="stat-card-value">
                    @{
                        var totalBalance = Model.Sum(u => u.Balance);
                    }
                    $@totalBalance.ToString("N2")
                </h3>
                <p class="stat-card-label">إجمالي الأرصدة</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card">
            <div class="stat-card-icon" style="background: var(--warning-lighter); color: var(--warning-main);">
                <i class="bi bi-graph-up-arrow"></i>
            </div>
            <div class="stat-card-content">
                <h3 class="stat-card-value">
                    @{
                        var avgBalance = Model.Any() ? Model.Average(u => u.Balance) : 0m;
                    }
                    $@avgBalance.ToString("N2")
                </h3>
                <p class="stat-card-label">متوسط الرصيد</p>
            </div>
        </div>
    </div>
</div>

<!-- Advertisers Table Card -->
<div class="card shadow-card">
    <div class="card-body p-0">
        <!-- Table Header -->
        <div class="d-flex align-items-center justify-content-between p-4 border-bottom">
            <div>
                <h5 class="mb-1 fw-semibold" style="color: var(--text-primary);">قائمة المعلنين</h5>
                <p class="text-muted mb-0 small">إدارة الأرصدة والمعاملات المالية</p>
            </div>
            <div class="input-group" style="max-width: 280px;">
                <span class="input-group-text bg-white border-end-0">
                    <i class="bi bi-search text-muted"></i>
                </span>
                <input type="text" class="form-control border-start-0 ps-0" id="searchInput" placeholder="بحث بالبريد الإلكتروني...">
            </div>
        </div>

        <!-- Table -->
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="advertisersTable">
                    <thead style="background-color: var(--gray-100);">
                        <tr>
                            <th class="px-4 py-3 text-muted fw-semibold small">المعلن</th>
                            <th class="px-4 py-3 text-muted fw-semibold small">البريد الإلكتروني</th>
                            <th class="px-4 py-3 text-muted fw-semibold small text-center">الرصيد الحالي</th>
                            <th class="px-4 py-3 text-muted fw-semibold small">الحالة</th>
                            <th class="px-4 py-3 text-muted fw-semibold small text-end">الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            var balance = user.Balance;
                            var statusClass = balance > 0 ? "success" : balance < 0 ? "danger" : "warning";
                            var statusText = balance > 0 ? "نشط" : balance < 0 ? "مدين" : "صفر";

                            <tr class="advertiser-row">
                                <td class="px-4 py-3">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="avatar-circle">
                                            @if (!string.IsNullOrEmpty(user.DisplayName))
                                            {
                                                <span>@user.DisplayName.Substring(0, 1).ToUpper()</span>
                                            }
                                            else if (!string.IsNullOrEmpty(user.Email))
                                            {
                                                <span>@user.Email.Substring(0, 1).ToUpper()</span>
                                            }
                                        </div>
                                        <div>
                                            <div class="fw-semibold" style="color: var(--text-primary);">
                                                @(user.DisplayName ?? "معلن")
                                            </div>
                                            <div class="text-muted small">ID: @user.Id.Substring(0, 8)</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-4 py-3">
                                    <span style="color: var(--text-secondary);">@user.Email</span>
                                </td>
                                <td class="px-4 py-3 text-center">
                                    <div class="d-flex align-items-center justify-content-center gap-2">
                                        <i class="bi bi-currency-dollar" style="color: var(--@(statusClass)-main);"></i>
                                        <span class="fw-bold" style="color: var(--@(statusClass)-main); font-size: 1.1rem;">
                                            @balance.ToString("N2")
                                        </span>
                                    </div>
                                </td>
                                <td class="px-4 py-3">
                                    <span class="badge-custom badge-@statusClass">
                                        <span class="status-dot status-@statusClass"></span>
                                        @statusText
                                    </span>
                                </td>
                                <td class="px-4 py-3">
                                    <div class="action-buttons justify-content-end">
                                        <a asp-action="AdjustBalance" asp-route-id="@user.Id"
                                           class="btn-icon btn-icon-primary"
                                           data-bs-toggle="tooltip"
                                           title="تعديل الرصيد">
                                            <i class="bi bi-wallet"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@user.Id"
                                           class="btn-icon btn-icon-info"
                                           data-bs-toggle="tooltip"
                                           title="عرض التفاصيل">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Table Footer with Pagination Info -->
            <div class="d-flex align-items-center justify-content-between p-4 border-top">
                <div class="text-muted small">
                    عرض <span class="fw-semibold" id="rowCount">@Model.Count()</span> من @Model.Count() معلن
                </div>
                <div class="text-muted small">
                    <i class="bi bi-info-circle me-1"></i>
                    آخر تحديث: @DateTime.Now.ToString("dd/MM/yyyy - hh:mm tt")
                </div>
            </div>
        }
        else
        {
            <div class="empty-state py-5">
                <div class="empty-state-icon">
                    <i class="bi bi-people"></i>
                </div>
                <h5 class="empty-state-title">لا يوجد معلنون</h5>
                <p class="empty-state-message">لم يتم العثور على أي معلنين في النظام حالياً</p>
            </div>
        }
    </div>
</div>
@section scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Search functionality
        const searchInput = document.getElementById('searchInput');
        const table = document.getElementById('advertisersTable');
        const rowCountSpan = document.getElementById('rowCount');

        if (searchInput && table) {
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase().trim();
                const rows = table.querySelectorAll('tbody tr');
                let visibleCount = 0;

                rows.forEach(row => {
                    const email = row.cells[1].textContent.toLowerCase();
                    const name = row.cells[0].textContent.toLowerCase();

                    if (email.includes(searchTerm) || name.includes(searchTerm)) {
                        row.style.display = '';
                        visibleCount++;
                    } else {
                        row.style.display = 'none';
                    }
                });

                if (rowCountSpan) {
                    rowCountSpan.textContent = visibleCount;
                }
            });
        }
    });
</script>
}
@model AdSystem.ViewModels.UserViewModel
@{
    ViewData["Title"] = "حذف المستخدم";
}

<!-- Page Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div>
            <h1 class="page-title">حذف المستخدم</h1>
            <p class="page-subtitle mb-0">تأكيد حذف المستخدم بشكل نهائي</p>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-lg-8 col-xl-6">
        <!-- Warning Card -->
        <div class="card mb-4" style="border-radius: var(--radius-lg); box-shadow: var(--shadow-card); border: 2px solid var(--error-main);">
            <div class="card-body p-4">
                <!-- Warning Icon -->
                <div class="text-center mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px; background: linear-gradient(135deg, var(--error-light), var(--error-main)); border-radius: 50%; margin-bottom: 16px;">
                        <i class="bi bi-exclamation-triangle-fill text-white" style="font-size: 40px;"></i>
                    </div>
                    <h3 class="fw-bold mb-2" style="color: var(--error-main);">تحذير: حذف دائم</h3>
                    <p class="text-muted mb-0">هل أنت متأكد من حذف هذا المستخدم وجميع بياناته؟</p>
                </div>

                <!-- User Details -->
                <div class="alert alert-danger mb-0" style="background-color: var(--error-lighter); border: none; border-radius: var(--radius-md); border-right: 4px solid var(--error-main);">
                    <h5 class="mb-3 fw-semibold" style="color: var(--error-dark);">
                        <i class="bi bi-info-circle ms-2"></i>
                        تفاصيل المستخدم المراد حذفه
                    </h5>

                    <div class="d-flex flex-column gap-3">
                        <!-- Full Name -->
                        <div class="d-flex align-items-start gap-3">
                            <div style="width: 36px; height: 36px; background-color: white; border-radius: 8px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                                <i class="bi bi-person" style="color: var(--error-main); font-size: 18px;"></i>
                            </div>
                            <div class="flex-grow-1">
                                <small class="text-muted d-block mb-1">الاسم الكامل</small>
                                <p class="mb-0 fw-semibold" style="color: var(--error-dark);">@Model.DisplayName</p>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="d-flex align-items-start gap-3">
                            <div style="width: 36px; height: 36px; background-color: white; border-radius: 8px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                                <i class="bi bi-envelope" style="color: var(--error-main); font-size: 18px;"></i>
                            </div>
                            <div class="flex-grow-1">
                                <small class="text-muted d-block mb-1">البريد الإلكتروني</small>
                                <p class="mb-0 fw-semibold" style="color: var(--error-dark); word-break: break-all;">@Model.Email</p>
                            </div>
                        </div>

                        <!-- Roles -->
                        <div class="d-flex align-items-start gap-3">
                            <div style="width: 36px; height: 36px; background-color: white; border-radius: 8px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                                <i class="bi bi-shield-check" style="color: var(--error-main); font-size: 18px;"></i>
                            </div>
                            <div class="flex-grow-1">
                                <small class="text-muted d-block mb-1">الأدوار</small>
                                <div class="d-flex gap-1 flex-wrap">
                                    @foreach (var role in Model.Roles)
                                    {
                                        <span class="badge" style="background-color: var(--error-main); color: white; padding: 4px 10px; border-radius: 6px; font-size: 0.75rem;">
                                            @role
                                        </span>
                                    }
                                    @if (!Model.Roles.Any())
                                    {
                                        <span style="color: var(--error-dark); font-size: 0.875rem;">لا يوجد دور</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Balance -->
                        <div class="d-flex align-items-start gap-3">
                            <div style="width: 36px; height: 36px; background-color: white; border-radius: 8px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                                <i class="bi bi-cash-stack" style="color: var(--error-main); font-size: 18px;"></i>
                            </div>
                            <div class="flex-grow-1">
                                <small class="text-muted d-block mb-1">الرصيد</small>
                                <p class="mb-0 fw-semibold" style="color: var(--error-dark);">@Model.Balance.ToString("C")</p>
                            </div>
                        </div>

                        <!-- Status -->
                        <div class="d-flex align-items-start gap-3">
                            <div style="width: 36px; height: 36px; background-color: white; border-radius: 8px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                                <i class="bi bi-toggle-on" style="color: var(--error-main); font-size: 18px;"></i>
                            </div>
                            <div class="flex-grow-1">
                                <small class="text-muted d-block mb-1">حالة الحساب</small>
                                <span class="badge" style="background-color: @(Model.IsActive ? "var(--success-main)" : "var(--error-main)"); padding: 6px 12px; border-radius: 8px;">
                                    @(Model.IsActive ? "نشط" : "معطل")
                                </span>
                            </div>
                        </div>

                        <!-- Created At -->
                        <div class="d-flex align-items-start gap-3">
                            <div style="width: 36px; height: 36px; background-color: white; border-radius: 8px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                                <i class="bi bi-calendar-check" style="color: var(--error-main); font-size: 18px;"></i>
                            </div>
                            <div class="flex-grow-1">
                                <small class="text-muted d-block mb-1">تاريخ الإنشاء</small>
                                <p class="mb-0 fw-semibold" style="color: var(--error-dark);">@Model.CreatedAt.ToString("dd MMMM yyyy")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Consequences Warning -->
        <div class="card mb-4" style="border-radius: var(--radius-lg); box-shadow: var(--shadow-card); background: linear-gradient(135deg, var(--warning-lighter), white);">
            <div class="card-body p-4">
                <h5 class="mb-3 fw-semibold" style="color: var(--text-primary);">
                    <i class="bi bi-exclamation-octagon ms-2"></i>
                    ماذا يحدث عند الحذف؟
                </h5>
                <div class="d-flex flex-column gap-2">
                    <div class="d-flex align-items-start gap-2">
                        <i class="bi bi-x-circle-fill flex-shrink-0 mt-1" style="color: var(--error-main);"></i>
                        <span style="color: var(--text-secondary); font-size: 0.875rem;">سيتم حذف المستخدم بشكل نهائي من النظام</span>
                    </div>
                    <div class="d-flex align-items-start gap-2">
                        <i class="bi bi-x-circle-fill flex-shrink-0 mt-1" style="color: var(--error-main);"></i>
                        <span style="color: var(--text-secondary); font-size: 0.875rem;">سيتم حذف جميع الإعلانات والمواقع المرتبطة بالمستخدم</span>
                    </div>
                    <div class="d-flex align-items-start gap-2">
                        <i class="bi bi-x-circle-fill flex-shrink-0 mt-1" style="color: var(--error-main);"></i>
                        <span style="color: var(--text-secondary); font-size: 0.875rem;">سيتم فقدان جميع الإحصائيات والبيانات المالية</span>
                    </div>
                    <div class="d-flex align-items-start gap-2">
                        <i class="bi bi-x-circle-fill flex-shrink-0 mt-1" style="color: var(--error-main);"></i>
                        <span style="color: var(--text-secondary); font-size: 0.875rem;">لن يتمكن المستخدم من الوصول إلى حسابه نهائياً</span>
                    </div>
                    <div class="d-flex align-items-start gap-2">
                        <i class="bi bi-x-circle-fill flex-shrink-0 mt-1" style="color: var(--error-main);"></i>
                        <span style="color: var(--text-secondary); font-size: 0.875rem;">لا يمكن التراجع عن هذا الإجراء أو استعادة البيانات</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Balance Warning -->
        @if (Model.Balance > 0)
        {
            <div class="card mb-4" style="border-radius: var(--radius-lg); box-shadow: var(--shadow-card); background: linear-gradient(135deg, #fff5f5, white); border: 2px solid var(--error-main);">
                <div class="card-body p-4">
                    <div class="d-flex align-items-start gap-3">
                        <div style="width: 48px; height: 48px; background-color: var(--error-main); border-radius: 12px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                            <i class="bi bi-exclamation-octagon-fill text-white" style="font-size: 24px;"></i>
                        </div>
                        <div>
                            <h6 class="mb-2 fw-bold" style="color: var(--error-main);">تحذير: رصيد نشط</h6>
                            <p class="mb-2" style="color: var(--error-dark); font-size: 0.875rem;">
                                هذا المستخدم لديه رصيد قدره <strong>@Model.Balance.ToString("C")</strong>. حذف المستخدم سيؤدي لفقدان هذا الرصيد بشكل دائم.
                            </p>
                            <p class="mb-0" style="color: var(--error-dark); font-size: 0.875rem;">
                                يُنصح بتصفية الرصيد قبل الحذف أو تعطيل الحساب بدلاً من حذفه.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Alternative Suggestion -->
        <div class="card mb-4" style="border-radius: var(--radius-lg); box-shadow: var(--shadow-card); background: linear-gradient(135deg, var(--info-lighter), white);">
            <div class="card-body p-3">
                <div class="d-flex align-items-start gap-3">
                    <div style="width: 40px; height: 40px; background-color: var(--info-main); border-radius: 10px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                        <i class="bi bi-lightbulb text-white" style="font-size: 20px;"></i>
                    </div>
                    <div>
                        <h6 class="mb-1 fw-semibold" style="color: var(--info-dark);">بديل: تعطيل الحساب</h6>
                        <p class="mb-0" style="color: var(--info-dark); font-size: 0.875rem;">
                            بدلاً من الحذف، يمكنك تعطيل الحساب مؤقتاً. سيمنع هذا المستخدم من تسجيل الدخول مع الاحتفاظ بجميع البيانات.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <form asp-action="DeleteConfirmed" method="post" id="deleteForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="d-flex gap-3 justify-content-center flex-wrap">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5" style="border-radius: var(--radius-md);">
                    <i class="bi bi-x-circle ms-2"></i>
                    إلغاء
                </a>
                <button type="submit" class="btn btn-danger btn-lg px-5" style="border-radius: var(--radius-md);">
                    <i class="bi bi-trash ms-2"></i>
                    تأكيد الحذف النهائي
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(255, 86, 48, 0.3);
    }

    .btn-outline-secondary:hover {
        transform: translateY(-2px);
    }
</style>

<script>
    document.getElementById('deleteForm').addEventListener('submit', function(e) {
        const userName = '@Model.DisplayName';
        const balance = @Model.Balance;

        let confirmMsg = `هل أنت متأكد تماماً من حذف المستخدم "${userName}"؟\n\n`;

        if (balance > 0) {
            confirmMsg += `تحذير: المستخدم لديه رصيد ${balance} ج.م سيتم فقدانه!\n\n`;
        }

        confirmMsg += 'هذا الإجراء لا يمكن التراجع عنه!';

        const confirmed = confirm(confirmMsg);

        if (!confirmed) {
            e.preventDefault();
            return false;
        }

        const btn = this.querySelector('button[type="submit"]');
        btn.disabled = true;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm ms-2"></span> جاري الحذف...';
    });
</script>